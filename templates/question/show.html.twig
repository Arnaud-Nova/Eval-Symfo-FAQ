{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur o'Faq{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8 breadcrumb">
            <div>
                {% for tag in question.tags %}
                    <a href="#"><span class="badge badge-primary">{{ tag.name }}</span></a>
                {% endfor %}
            </div>
        
            <div>
                <a class="d-block" href="#">{{ question.title }}</a>
                
                <p>{{ question.createdAt.date }}</p>
                <p>Question de {{ question.author.username }}</p>
                <p>{{ question.content }}</p>
            </div>
        </div>
        <div class="col-2">
        </div>
    </div>
    {% for answer in question.answers %}
        <div class="row">
            <div class="col-2">
            </div>
            
            <div class="col-8 breadcrumb">

                <p>RÃ©ponse de {{ answer.author.username }} le {{ answer.createdAt.date }}</p>
                <p>{{ answer.content }}</p>
            </div>
            
            <div class="col-2">
            </div>
        </div>
    {% endfor %}
    


{% endblock %}
